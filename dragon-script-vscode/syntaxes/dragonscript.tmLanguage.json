{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DragonScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"include": "#comments-inline"
				},
				{
					"include": "#comments-block"
				}
			]
		},
		"comments-inline": {
			"patterns": [
				{
					"match": "((//).*)$",
					"captures": {
						"1": {
							"name": "comment.line.double-slash.dragonscript"
						}
					}
				}
			]
		},
		"comments-block": {
			"patterns": [
				{
					"name": "comment.block.dragonscript",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"include": "#comments-block"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dragonscript",
					"match": "\\b(if|for|return|break|continue)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dragonscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dragonscript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dragonscript"
}